<!-- Parent View -->
<view size="fullscreen" id="hittest-listener">
    <view size="{100%,100%}" layout="center vertical" class="account-scene">

        <!-- View container for Dismiss buttons -->
        <view size="{100%,9%}">
            <button frame="{{@-46,30},{26,26}}" backgroundImage="Images/Buttons/universal-nav-close"/>
            <button frame="{{@-65,30},{60,150%}}" onTap="dismissTapped" id="nav-dismiss-button"/>
        </view>

        <!-- View container for Scene Title -->
        <view size="{100%,7%}" id="subheader-view">
            <label frame="{{10,0},{@-20,100%}}" numberOfLines="3" lineBreakMode="word-wrap" text="BFMyProfile" id="subheader-text" textAlignment="center"/>
        </view>

        <!-- View container for Profile Picture -->
        <view size="{100%,19.5%}" layout="center vertical">
            <edit-profile-picture-widget id="profile-picture-widget" autoSave="NO">
                <view size="{35%,100%}" id="profile-picture-view">
                    <imageview frame="{{-3,-3},{106%,106%}}" image="Images/universal-avatar-default-editable" id="add-picture-image" />
                    <imageview size="{100%,100%}" id="primary-profile-picture-view"/>
                    <view frame="{{0,75%},{100%,100%}}" backgroundColor="#000000" id="upload-label-background-view"/>
                    <view frame="{{0,73%},{100%,100%}}" id="upload-label-view">
                        <label size="{100%,21%}" text="BFUpload" id="upload-label" textAlignment="center" />
                    </view>
                    <button size="{100%,100%}" onTap="changePicture" id="add-picture-button"/>
                </view>
            </edit-profile-picture-widget>
        </view>

        <!-- View container for Email Address Label-->
        <view size="{100%,6%}" layout="center">
            <label size="{90%,100%}" text="" id="email-address-label" textAlignment="center"/>
        </view>

        <!-- View container for Display Name, Save button, and Sign out button -->
        <view size="{90%,56%}">
            <!-- View container for Display Name label and Display Name text field -->
            <view size="{100%,44%}" layout="linear vertical 2">
                <label size="{100%,22%}" text="Display name" id="field-header"/>
                <!-- View container for Display Name text field -->
                <view size="{100%,52}">
                    <imageview size="{100%,100%}" image="Images/portrait-input-error" id="display-name-bg-error" hidden="true"/>
                    <imageview size="{100%,100%}" image="Images/portrait-input-focus" id="display-name-bg-focus" hidden="true"/>
                    <imageview size="{100%,100%}" image="Images/portrait-input-empty" id="display-name-bg-empty" hidden="false"/>
                    <textfield frame="{{15,15},{@-60,25}}" id="display-name-field" autoresizingMask="width" autocapitalizationType="none"/>
                    <button frame="{{@-35,18},{20,20}}" id="display-name-clear-text-button" onTap="clearText"/>
                </view>
                <label size="{100%,14%}" text="How your name will appear in-game" id="help-text"/>
            </view>
            
            <!-- View container for Save button and Sign out button -->
            <view frame="{{0,42%},{100%,57%}}">
                <view frame="{{0,@-120},{100%,52}}" layout="center vertical">
                    <button size="{100%,52}" onTap="handleSave" title="BFSaveAndClose" id="save-button"/>
                </view>
                <view frame="{{0,@-60},{100%,42}}" layout="center vertical">
                    <button size="{70%,42}" onTap="handleSignOut" title="BFSignOut" id="sign-out-button"/>
                </view>
            </view>
            
            <!-- View container for Invalid Display Name Error -->
            <view frame="{{10,72},{260,50}}" hidden="true" id="invalid-display-name-error">
                <imageview frame="{{0,0},{100%,100%}}" image="Images/universal-auth-errormsg-2line"></imageview>
                <label class="invalid-error-label" frame="{{9,3},{90%,90%}}" numberOfLines="0" text="RSScreenNameLengthErrorStr" lineBreakMode="word-wrap"></label>
            </view>
        </view>

    </view>
    
</view>
