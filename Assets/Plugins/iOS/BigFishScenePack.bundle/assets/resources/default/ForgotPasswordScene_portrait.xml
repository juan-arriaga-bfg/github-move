<scene>
    <!-- Parent View -->
    <view size="fullscreen" id="hittest-listener">
        <!-- Forgot Password View -->
        <view hidden="false" id="forgot-password-scene" size="{100%,100%}">
            <view backgroundColor="#F9F9F5" layout="center vertical" size="{100%,100%}">
                <!-- View container for Back and Dismiss buttons -->
                <view size="{100%,10.75%}">
                    <button frame="{{20,30},{33,21})" backgroundImage="Images/Buttons/universal-nav-back"/>
                    <button frame="{{5,30},{70,51}}" onTap="backTapped" id="nav-back-button"/>
                    <button frame="{{@-40,30},{26,25}}" backgroundImage="Images/Buttons/universal-nav-close"/>
                    <button frame="{{@-65,30},{60,51}}" onTap="dismissTapped" id="nav-dismiss-button"/>
                </view>
                
                <label class="header-text" font="Montserrat-SemiBold" size="{90%,8.75%}"
                text="BFForgotPassword" textAlignment="center" />
                
                <label class="sub-header-text" numberOfLines="0" size="{90%,10.75%}"
                text="BFSendNewPassword" textAlignment="center" />
                
                <!-- Spacer -->
                <view size="{100%,3.5%}" />
                
                <label id="enter-email-label" size="{85%,4.75%}" text="BFEnterEmail" />
                
                <!-- View container for Enter Email label and Email text field -->
                <view layout="center" size="{85%,9.5%}">
                    <imageview id="email-input-error" image="Images/portrait-input-error"
                    size="{100%,100%}" />
                    <imageview id="email-input-focused" image="Images/portrait-input-focus"
                    size="{100%,100%}" />
                    <imageview id="email-input-inactive" image="Images/portrait-input-empty"
                    size="{100%,100%}" />
                    <view layout="center horizontal" size="{100%,50%}">
                        <!-- Spacer -->
                        <view size="{5%,100%}" />
                        <textfield autocapitalizationType="none" autoresizingMask="width"
                        borderStyle='none' class="sub-header-text" id="login-email-field"
                        keyboardType="email-address" size="{80%,100%}" />
                        <!-- Spacer -->
                        <view size="{2.5%,100%}" />
                        <view layout="center" size="{10%,100%}">
                            <button class="clear-text-button" hidden="true" id="clear-email-button"
                            onTap="handleClearText" size="{21,21}" />
                        </view>
                    </view>
                </view>
                
                <!-- Spacer -->
                <view size="{100%,1.75%}" />
                
                <view size="{86%,10.5%}">
                    <button class="send-email-button-portrait" id="send-email-button"
                    onTap="handleSendEmail" size="{100%,100%}" />
                    <label class="primary-button-label" size="{100%,90%}" text="BFSendEmail"
                    textAlignment="center" />
                </view>

                <!-- Spacer -->
                <view size="{100%,27%}" />
                
                <htmllabel id="need-help-label" lineBreakMode="word-wrap" numberOfLines="0"
                size="{75%,11.25%}" text="BFNeedHelp" textAlignment="center" />
            </view>
            
            <!-- View container for the invalid-email error pop-up -->
            <view frame="{{10%,45%},{80%,41}}" hidden="true" id="primary-email-error"
                layout="center">
                <imageview image="Images/universal-auth-errormsg-1line" size="{100%,100%}" />
                <label class="invalid-email-error-label" id="invalid-email-error-label"
                numberOfLines="2" size="{90%,50%}" text="BFEnterValidEmail" />
            </view>
            
            <!-- View container for the account-does-not-exist error pop-up -->
            <view frame="{{10%,45%},{80%,59}}" hidden="true" id="secondary-email-error"
                layout="center">
                <imageview image="Images/universal-auth-errormsg-2line"
                    size="{100%,100%}"></imageview>
                <htmllabel class="invalid-email-error-label" id="account-not-found-error-label"
                    numberOfLines="2" size="{90%,70%}"
                    text="BFNoAccountExistsError" lineBreakMode="word-wrap"></htmllabel>
            </view>
        </view>
        
        <!-- Email Sent Scene -->
        <view hidden="true" id="email-sent-scene" size="{100%,100%}">
            <imageview id="background-image-email-sent-portrait" size="{100%,100%}" />
            <view layout="center vertical" size="{100%,100%}" id="portrait_view">
                <!-- Spacer -->
                <view size="{100%,45%}" />
                <label class="sub-header-text" numberOfLines="8" size="{90%,30%}"
                text="BFEmailSentDescription" textAlignment="center" id="email-sent-description"/>
                <!-- Spacer -->
                <view size="{100%,5%}" />
                <view layout="center" size="{90%,20%}">
                    <view size="{100%,68}">
                        <button class="send-email-button-landscape" onTap="handleSignIn"
                        size="{100%,100%}" />
                        <label class="primary-button-label" size="{100%,90%}" text="BFSignIn"
                        textAlignment="center" />
                    </view>
                </view>
            </view>
            <button backgroundImage="Images/Buttons/universal-nav-close-white" onTap="dismissTapped"
                frame="{{@-40,25},{26,25}}" />
        </view>
    </view>
</scene>
