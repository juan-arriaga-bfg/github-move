<scene>
    <view size="fullscreen">
        <!--Parent View -->
        <view backgroundColor="#F9F9F5" hidden="true" id="sign-up-coppa-failure" size="{100%,100%}">
            <view frame="{{14,14},{@-28,@-28}}" layout="center vertical">
                <!-- Spacer -->
                <view size="{100%,10%}" />
                
                <view layout="center vertical" size="{100%,80%}">
                    <htmllabel class="caption-text" lineBreakMode="word-wrap" numberOfLines="7"
                        size="{60%,75%}" text="BFCoppaEligibilityError"
                        textAlignment="center"></htmllabel>
                    <view layout="center" size="{100%,25%}" hidden="false">
                        <view size="{50%,66.5}">
                            <button onTap="closeTapped" size="{100%,100%}" id="nav-back-button" />
                            <label class="primary-button" size="{100%,90%}" text="BFClose"
                            textAlignment="center" />
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view hidden="false" id="sign-up-successful" size="{100%,100%}">
            <imageview id="background-image-welcome-landscape" size="{100%,100%}"></imageview>
            <view layout="center horizontal" size="{100%,100%}">
                <view layout="center vertical" size="{41%,100%}">
                    <!-- Spacer -->
                    <view size="{100%,35%}" />
                    <view size="{110,110}" layout="center" id="profileContainer">
                        <imageview image="Images/universal-avatar-default" id="primary-profile-picture-view" size="{100%,100%}" />
                    </view>
                    
                    <view layout="center vertical" size="{90%,35%}">
                        <label id="user-id-label" lineBreakMode="word-wrap" numberOfLines="2"
                            size="{90%,50}" textAlignment="center"></label>
                    </view>
                </view>
                
                <view layout="center vertical" size="{58%,100%}">
                    <!-- Spacer -->
                    <view size="{100%,22%}" />
                    <label id="welcome-dialogue" lineBreakMode="word-wrap" numberOfLines="4"
                        size="{90%,30%}" text="BFWelcomeDialogue"
                        textAlignment="center"></label>
                    
                    <view size="{100%,48%}">
                        <view frame="{{5%,5%},{90%,90%}}" layout="center vertical" hidden="false" id="connect-to-facebook-options">
                            <view layout="center" size="{100%,50%}">
                                <rave-connect-friends-widget id="facebook-connect-widget" pluginKeyName="Facebook">
                                    <view size="{100%,59}">
                                        <button id="connect-to-facebook-button"
                                        onTap="connectToFacebook" size="{100%,100%}" />
                                        <label class="primary-button" frame="{{10%,0},{90%,90%}}"
                                        text="BFConnectToFacebook" textAlignment="center" id="fb-label"/>
                                    </view>
                                </rave-connect-friends-widget>
                            </view>
                            <view layout="center" size="{100%,45%}">
                                <view size="{70%,48}">
                                    <button id="not-now-button" onTap="notnowTapped"
                                    size="{100%,100%}" />
                                    <label id="not-now-label" frame="{{0,-3},{100%,100%}}" text="BFNotNow" textAlignment="center" />
                                </view>
                            </view>
                        </view>
                        <view frame="{{5%,5%},{90%,90%}}" layout="center vertical" hidden="false" id="sign-up-done">
                            <!-- Spacer -->
                            <view size="{100%,33%}" />
                            <view layout="center" size="{100%,50%}">
                                <view size="{100%,69}">
                                    <button id="connect-to-facebook-done" onTap="doneTapped"
                                    size="{100%,100%}" />
                                    <label class="primary-button" frame="{{0,-3},{100%,100%}}" text="BFDone" textAlignment="center" />
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <!-- Dismiss button -->
        <view frame="{{0,15},{100%,25}}">
            <button frame="{{@-60,0},{26,25}}" image="Images/Buttons/universal-nav-close" />
            <button frame="{{@-75,-12},{55,54}}" onTap="dismissTapped" id="nav-dismiss-button" />
        </view>
    </view>
</scene>
