<scene>
    <!-- Parent View -->
    <view layout="center" size="fullscreen" id="hittest-listener">
        <view size="{667,375}">
            <!-- Forgot Password View -->
            <view hidden="false" id="forgot-password-scene" size="{100%,100%}">
                <view backgroundColor="#F9F9F5" layout="center vertical" size="{100%,100%}">
                    <!-- View container for Scene title, Back and Dismiss buttons -->
                    <view size="{100%,13.75%}">
                        <label size="{100%,100%}" class="header-text" font="Montserrat-SemiBold" text="BFForgotPassword" textAlignment="center"/>
                        <button frame="{{20,15},{33,21}}" backgroundImage="Images/Buttons/universal-nav-back"/>
                        <button frame="{{0,0},{75,100%}}" onTap="backTapped" id="nav-back-button"/>
                        <button frame="{{@-40,15},{26,25}}" backgroundImage="Images/Buttons/universal-nav-close"/>
                        <button frame="{{@-75,0},{75,100%}}" onTap="dismissTapped" id="nav-dismiss-button"/>
                    </view>
                    
                    <!-- Scroll view -->
                    <scrollview id="scroll-content" size="{100%,100%}" layout="center vertical">
                        <label class="sub-header-text" numberOfLines="2" size="{60%,20%}"
                        text="BFSendNewPassword" textAlignment="center" />
                        
                        <label id="enter-email-label" size="{60%,9.25%}" text="BFEnterEmail" />
                        
                        <!-- View container for Enter Email label and Email text field -->
                        <view layout="center" size="{60%,60}">
                            <imageview id="email-input-error" image="Images/portrait-input-error"
                            size="{100%,100%}" />
                            <imageview id="email-input-focused" image="Images/portrait-input-focus"
                            size="{100%,100%}" />
                            <imageview id="email-input-inactive" image="Images/portrait-input-empty"
                            size="{100%,100%}" />
                            <view layout="center horizontal" size="{100%,75%}">
                                <!-- Spacer -->
                                <view size="{5%,100%}" />
                                <textfield autocapitalizationType="none" autoresizingMask="width"
                                borderStyle='none' class="sub-header-text" id="login-email-field"
                                keyboardType="email-address" size="{80%,100%}" />
                                <!-- Spacer -->
                                <view size="{2.5%,100%}" />
                                <view layout="center" size="{10%,100%}">
                                    <button class="clear-text-button" hidden="true"
                                    id="clear-email-button" onTap="handleClearText" size="{21,21}" />
                                </view>
                            </view>
                        </view>
                        
                        <!-- Spacer -->
                        <view size="{100%,2.5%}" />
                        
                        <view size="{61%,68}">
                            <button class="send-email-button-landscape" id="send-email-button"
                            onTap="handleSendEmail" size="{100%,100%}" />
                            <label class="primary-button-label" size="{100%,90%}"
                            text="BFSendEmail" textAlignment="center" />
                        </view>
                        
                        <!-- Spacer -->
                        <view size="{100%,2.5%}" />
                        
                        <htmllabel id="need-help-label" lineBreakMode="word-wrap" numberOfLines="0"
                        size="{50%,23%}" text="BFNeedHelp" textAlignment="center" />
                    </scrollview>
                </view>
                
                <!-- View container for the invalid-email error pop-up -->
                <view frame="{{22.5%,54%},{55%,44}}" hidden="true" id="primary-email-error"
                    layout="center">
                    <imageview image="Images/universal-auth-errormsg-1line" size="{100%,100%}" />
                    <label class="invalid-email-error-label" id="invalid-email-error-label"
                    numberOfLines="2" size="{90%,50%}" text="BFEnterValidEmail" />
                </view>
                
                <!-- View container for the account-does-not-exist error pop-up -->
                <view frame="{{22.5%,54%},{55%,60}}" hidden="true" id="secondary-email-error"
                    layout="center">
                    <imageview image="Images/universal-auth-errormsg-2line"
                        size="{100%,100%}"></imageview>
                    <htmllabel class="invalid-email-error-label" id="account-not-found-error-label"
                        numberOfLines="2" size="{90%,70%}"
                        text="BFNoAccountExistsError" lineBreakMode="word-wrap"></htmllabel>
                </view>
            </view>
            
            <!-- Email Sent Scene -->
            <view hidden="true" id="email-sent-scene" size="{100%,100%}">
                <imageview id="background-image-email-sent-landscape" size="{100%,100%}" />
                <view layout="center horizontal" size="{100%,100%}">
                    <!-- Spacer -->
                    <view size="{42.5%,100%}" />
                    <view layout="center vertical" size="{57.5%,100%}">
                        <view size="{90%,13.75%}">
                            <view frame="{{@-26,0},{26,100%}}" layout="center">
                                <button backgroundImage="Images/Buttons/universal-nav-close"
                                onTap="dismissTapped" size="{100%,25}" />
                            </view>
                        </view>
                        <label class="sub-header-text" numberOfLines="8" size="{90%,50%}"
                        text="BFEmailSentDescription" textAlignment="center" />
                        <view layout="center" size="{90%,36.25%}">
                            <view size="{100%,68}">
                                <button class="send-email-button-landscape" onTap="handleSignIn"
                                size="{100%,100%}" />
                                <label class="primary-button-label" size="{100%,90%}" text="BFSignIn"
                                textAlignment="center" />
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        
    </view>
</scene>
